      <%# <box-icon name='transfer-alt' type='solid' color='#404040'></box-icon> %>
      <i class="fa-solid fa-money-bill-transfer"></i>
      <p>Transactions</p>
    <% end %>

    <%= link_to analytics_path , class: "nav-button" do %>
